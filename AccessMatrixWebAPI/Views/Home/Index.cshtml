<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div id="left-panel" class="col-lg-4 col-sm-6" style="padding-left:50px;padding-top:50px;">
                <div id="logo" class="row">
                    <div class="col-lg-12">
                        <div class="logo">
                            <img src="~/Content/Images/logo.png" />
                            <h5>ISU Access Map</h5>
                        </div>
                    </div>
                </div>
                <!-- Search -->
                <div id="search" class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default glyphicon glyphicon-search"></button>
                    </span>
                </div>
                <div id="msgFilters" class="col-lg-12 col-sm-12"></div>
                <!-- Filters -->
                <div id="f_filter" class="row">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="dd_locations" class="col-lg-4 col-sm-4 control-label">LOCATION</label>
                            <div class="col-lg-6 col-sm-6">
                                <select id="dd_locations" class="form-control" data-live-search="true" data-size="auto" title="Location Name" required>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dd_clients" class="col-lg-4 col-sm-4 control-label">CLIENT</label>
                            <div class="col-lg-6 col-sm-6">
                                <select id="dd_clients" class="form-control" data-live-search="true" data-size="auto" title="Client Name" required></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dd_departments" class="col-lg-4 col-sm-4 control-label">DEPARTMENT</label>
                            <div class="col-lg-6 col-sm-6">
                                <select id="dd_departments" class="form-control" data-live-search="true" data-size="auto" title="Department Name" required></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dd_programs" class="col-lg-4 col-sm-4 control-label">PROGRAM</label>
                            <div class="col-lg-6 col-sm-6">
                                <select id="dd_programs" class="form-control" data-live-search="true" data-size="auto" title="Program Name" required></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dd_projects" class="col-lg-4 col-sm-4 control-label">PROJECT</label>
                            <div class="col-lg-6 col-sm-6">
                                <select id="dd_projects" class="form-control" data-live-search="true" data-size="auto" title="Project Name" required></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dd_roles" class="col-lg-4 col-sm-4 control-label">ROLE</label>
                            <div class="col-lg-6 col-sm-6">
                                <select id="dd_roles" class="form-control" data-live-search="true" data-size="auto" title="Role Name" required></select>
                            </div>
                        </div>
                    </div>
                </div>
                    <!-- Save/Cancel -->
                    <div id="buttons" class="col-lg-offset-4 col-sm-offset-4" style="display:none">
                        <button id="b_save" class="btn btn-primary">Save</button>
                        <button id="b_cancel" class="btn btn-default">Cancel</button>
                    </div>
                </div>

            <!-- Form -->
            <div id="right-panel" class="col-lg-8 col-sm-6">
                <div class="row">
                    <!-- Alert -->
                    <div id="msg" class="col-lg-12 col-sm-12"></div>
                    <div id="busy">
                        <img src="~/Content/Images/loading-gears.gif" />
                    </div>
                    <div id="f_permissions">
                        <!-- PROFILE ID PANEL -->
                        <div class="row">
                            <div class="form-group col-md-12">
                                <div class="col-md-4 col-sm-4">
                                    <input type="text" id="profile-id" name="profile-id" class="form-control" disabled="disabled" />
                                </div>
                                <div class="col-md-8 col-sm-8">
                                    <input type="text" id="profile-desc" name="profile-desc" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <!-- ACTIVE DIRECTORY PANEL -->
                        <div class="row">
                            <div class="col-md-12">
                                <div id="f_active_directory" class="panel panel-default" style="margin:15px;">
                                    <div class="panel-heading">
                                        <h5 class="panel-title">
                                            <span class="glyphicon glyphicon-globe" />
                                            Active Directory
                                        </h5>
                                    </div>
                                    <div class="panel-body form-horizontal">
                                        <div class="form-group">
                                            <label for="ad-domain" class="col-md-2 col-sm-2 control-label">Domain</label>
                                            <div class="col-md-10 col-sm-10">
                                                <select id="ad-domain" class="form-control" name="ad-domain" data-live-search="true" data-size="auto" title="Select Domain">
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="ad-ou" class="col-md-2 col-sm-2 control-label">OU</label>
                                            <div class="col-md-10 col-sm-10">
                                                <select class="ad_ou form-control dropdown"></select>
                                                <input id="ad-ou" type="text" class="form-control" name="ad-ou" placeholder="domain.com/container/subcontainer" disabled />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="ad-loginscript" class="col-md-2 col-sm-2 control-label">Logon Script</label>
                                            <div class="col-md-10 col-sm-10">
                                                <input id="ad-loginscript" type="text" class="form-control" name="ad-loginscript"
                                                       placeholder="path/script.ext" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="ad-profiledrive" class="col-md-2 col-sm-2 control-label">Shared Drive</label>
                                            <div class="col-md-10 col-sm-10 form-inline">
                                                <select id="ad-profiledrive" class="form-control" name="ad-profiledrive" data-live-search="true" data-size="auto" title="Drive">
                                                    @for (int x = 78; x <= 90; x++)
                                                    {
                                                        char drive = (Char)x;
                                                        <option value="@drive">@drive :</option>;
                                                    }
                                                </select>
                                                <input id="ad-profilepath" type="text" class="form-control" name="ad-profilepath"
                                                       placeholder="\\server\path" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="ad-sec_group" class="col-md-2 col-sm-2 control-label">Member of</label>
                                            <div class="col-md-10 col-sm-10">
                                                <select id="ad-sec_group" class="sec_group form-control dropdown" name="ad-sec_group">
                                                </select>
                                                <ul style="height:100px;overflow-y:scroll" id="ad-group" class="form-control" name="ad-group"></ul>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="ad-changepass" class="control-label col-md-5 col-sm-5">
                                                <input id="ad-changepass" type="checkbox" name="ad-changepass" class="checkbox-inline" />
                                                Change password upon login
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <!-- EMAIL PANEL -->
                                <div class="col-lg-6 col-sm-6">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h5 class="panel-title">
                                                <span class="glyphicon glyphicon-envelope" />
                                                Email
                                            </h5>
                                        </div>
                                        <div class="panel-body form-horizontal">
                                            <div class="form-group">
                                                <label for="email-domain" class="col-md-4 col-sm-4 control-label">Domain</label>
                                                <div class="col-md-8 col-sm-8">
                                                    <select class="form-control" name="email-domain" id="email-domain" data-live-search="true" data-size="auto" title="Email Domain">
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="email-smtp" class="col-md-4 col-sm-4 control-label">SMTP</label>
                                                <div class="col-md-8 col-sm-8">
                                                    <input type="text" class="form-control" name="email-smtp" id="email-smtp" />
                                                </div>
                                            </div>

                                            <div class="form-group" style="padding-left:15px;">
                                                <label for="email-email_forwarding" class="checkbox-inline">
                                                    <input id="email-email_forwarding" type="checkbox" name="email-email_forwarding" />
                                                    Email Forwarding

                                                </label><br />

                                                <label for="email-webmail" class="checkbox-inline">
                                                    <input id="email-webmail" type="checkbox" name="email-webmail" />
                                                    Webmail
                                                </label><br />

                                                <label for="ad-mobile_activesync" class="checkbox-inline">
                                                    <input id="ad-mobile_activesync" type="checkbox" name="ad-mobile_activesync" />
                                                    Mobile Activesync
                                                </label>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                                <!-- OTHERS PANEL -->
                                <div class="col-lg-6 col-sm-6">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h5 class="panel-title">
                                                <span class="glyphicon glyphicon-cog" />
                                                Others
                                            </h5>
                                        </div>
                                        <div class="panel-body form-horizontal">
                                            <div class="form-group">
                                                <label for="others-workbooth" class="col-md-2 col-sm-2 control-label">WB</label>
                                                <div class="col-md-10 col-sm-10">
                                                    <select id="others-workbooth" class="form-control col-sm-10" name="others-workbooth" data-live-search="true" data-size="auto" title="Select WB">
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="others-vp" class="col-md-2 col-sm-2 control-label"> VPN </label>
                                                <div class="col-md-10 col-sm-10">
                                                    <select id="others-vp" class="form-control" name="others-vpn" data-live-search="true" data-size="auto" title="Select VPN">
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label for="others-chat" class="col-md-2 col-sm-2 control-label"> Chat </label>
                                                <div class="col-md-10 col-sm-10" id="others-chat">
                                                </div>
                                            </div>

                                            <div class="form-inline" style="padding-left:15px;">
                                                <label for="others-federation" class="checkbox-inline">
                                                    <input id="others-federation" type="checkbox" name="others-federation" />
                                                    Federation
                                                </label><br>
                                                <label for="others-box_acct" class="checkbox-inline">
                                                    <input id="others-box_acct" type="checkbox" name="others-box_acct" />
                                                    BOX Account
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- REMARKS PANEL -->
                        <div class="row">
                            <div class="col-lg-12" style="margin:10px;">
                                <textarea id="remarks" class="form-control" name="remarks" rows="7" cols="40" placeholder="Remarks">
                                </textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- </content> -->
    </div>
</div>